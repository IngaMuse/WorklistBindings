<mvc:View
	controllerName="zjblessons.WorklistBindings.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">

<Page 
	>
	<customHeader>
		<OverflowToolbar>
			<Title id='tableHeader' text="{i18n>worklistTitle}"/>
		</OverflowToolbar>
	</customHeader>
		<Table 
				id='table' 
				width="auto" 
				growing="true"
				growingScrollToLoad="true" >
			<headerToolbar>
				<OverflowToolbar>
					<Title  text="{i18n>itemsCount} ({= ${worklistView>/sCount}})"/>
					<ToolbarSpacer />
				</OverflowToolbar>
			</headerToolbar>
			<columns>
				<Column>
					<Text text="{i18n>tableNameColumnTitle}"/>
				</Column>
				<Column>
					<Text text="{i18n>tableNameColumnTitleDocumentDate}"/>
				</Column>
				<Column>
					<Text text="{i18n>tableNameColumnTitlePlantText}"/>
				</Column>
				<Column>
					<Text text="{i18n>tableNameColumnTitleRegionText}"/>
				</Column>
				<Column>
					<Text text="{i18n>tableNameColumnTitleDescription}"/>
				</Column>
				<Column>
					<Text text="{i18n>tableNameColumnTitleCreated}"/>
				</Column>
			</columns>
		</Table>
	</Page>

</mvc:View>